
["Dragon"] = {
    Speed = 22, 
    Color = BrickColor.new("Bright yellow"), 
    IsLocked = true -- It starts locked!
}
local substoryCompleted = false 

-- This function "Unlocks" the style
local function unlockSecretStyle()
    substoryCompleted = true
    styles["Dragon"].IsLocked = false
    print("THE DRAGON HAS AWAKENED!")
    -- Maybe play a cool sound or show a "STYLE UNLOCKED" UI here
end
-- Inside your InputBegan where you handle 1, 2, 3...
if input.KeyCode == Enum.KeyCode.Four then
    if styles["Dragon"].IsLocked == false then
        setStyle("Dragon")
    else
        print("Style is locked! Complete the Space Substory first.")
        -- You could show a "???" notification to the player here
    end
end
local thugsDefeated = 0

-- Inside your Thug's "Died" logic
thugsDefeated += 1
if thugsDefeated == 10 then
    -- Send a message to the player's LocalScript to unlock the style
    print("Legendary Style Unlocked!")
end
